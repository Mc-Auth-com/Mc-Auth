{
  "name": "mc-auth-web",
  "version": "2.0.0",
  "description": "Easily login with your Minecraft account without giving your password or email to strangers! Fully oAuth2 compliant!",
  "keywords": [
    "Minecraft",
    "oAuth2",
    "oAuth",
    "Login",
    "GDPR",
    "API",
    "restful",
    "rest"
  ],
  "homepage": "https://mc-auth.com",
  "main": "build/index.js",
  "private": false,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production nodemon --enable-source-maps build/index.js",
    "devStart": "cross-env NODE_ENV=development ts-node src/index.ts",
    "dev": "nodemon --ext ts,html,json,txt --watch ./src --watch ./resources/lang --watch ./resources/web/dynamic --watch ./resources/email --exec \"npm run devStart\""
  },
  "author": {
    "name": "Christian Koop",
    "url": "https://Sprax2013.de",
    "email": "developer@sprax2013.de"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mc-Auth-com/Mc-Auth-Web.git"
  },
  "bugs": {
    "url": "https://github.com/Mc-Auth-com/Mc-Auth-Web/issues"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "connect-pg-simple": "^6.2.1",
    "cookie-parser": "^1.4.5",
    "ejs": "^3.1.6",
    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.5.0",
    "nodemon": "^2.0.7",
    "object-assign-deep": "^0.4.0",
    "pg": "^8.5.1",
    "request": "^2.88.2",
    "rotating-file-stream": "^2.1.5",
    "sharp": "^0.28.0",
    "superagent": "^6.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^4.2.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/ejs": "^3.0.6",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/nodemailer": "^6.4.1",
    "@types/object-assign-deep": "^0.4.0",
    "@types/pg": "^7.14.11",
    "@types/request": "^2.48.5",
    "@types/sharp": "^0.27.3",
    "@types/superagent": "^4.1.10",
    "cross-env": "^7.0.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "nodemonConfig": {
    "watch": [
      "build"
    ]
  }
}
